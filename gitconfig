[user]
	name = Logan Barnett
	email = logustus@gmail.com
[color]
       status = auto
       branch = auto
       diff = auto
[mergetool "diffmerge"]
    cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge \
        --nosplash \
        --result="$PWD/$MERGED" \
        "$PWD/$REMOTE" \
        "$PWD/$BASE" \
 	"$PWD/$LOCAL" 
    keepBackup = false
    trustExitCode = false
[merge]
  tool = diffmerge
	ff-only = true
[core]
	excludesfile = ~/.gitignore_global
	editor = /usr/bin/vim
	#autocrlf = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
	followTags = true
[alias]
	wdiff = diff --color-words
  fast-amend=commit --amend --no-edit
  unstage=reset HEAD --
  tip=log -1
  # Removes branches that have been merged already.
  tidy=!git branch --merged | sed /^\\*/d | xargs git branch -d
  branchg=!git branch -avv | grep
[diff]
	algorithm = patience
[pull]
	ff-only = true
  rebase = true
[rebase]
  autoStash = true
